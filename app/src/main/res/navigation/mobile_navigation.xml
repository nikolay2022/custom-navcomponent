<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.uscreen.features.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
        android:id="@id/navigation_dashboard"
        android:name="com.example.uscreen.features.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/next_action"
            app:destination="@id/navigation_example" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.uscreen.features.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_example"
        android:name="com.example.uscreen.features.detail.DetailFragment"
        android:label="examplee"
        tools:layout="@layout/fragment_example">
        <action
            android:id="@+id/next_action_examplee"
            app:destination="@id/navigation_examplee" />
    </fragment>

    <fragment
        android:id="@+id/navigation_examplee"
        android:name="com.example.uscreen.features.examplee.ExampleeFragment"
        android:label="uhiu"
        tools:layout="@layout/fragment_examplee" />

</navigation>